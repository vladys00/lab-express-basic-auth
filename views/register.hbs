    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Sign In</h3>
                        <form action="/register" method="POST">
                             <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input name="username" type="text" class="form-control " id="username" placeholder="Enter your username" required>
                            </div>
                            <!-- Username or Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input value="{{user.email}}" name="email" type="text" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email" placeholder="Enter your email" required>
                                 {{#if errors.email}}
                                <div class="invalid-feedback">
                                 {{errors.email}}
                                </div>
                                {{/if}}
                            </div>
                            <!-- Password -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password" placeholder="Enter your password" required minlength="8">
                             {{#if errors.password}}
                                <div class="invalid-feedback">
                                {{errors.password}}
                                </div>
                                {{/if}}
                            </div>
                         
                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Sign In</button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <p class="small">Don't have an account? <a href="#">Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>